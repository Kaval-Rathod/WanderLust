<%- layout("layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <h2>Add new</h2>
        <form action="/listings" method="POST">
            <div class="mb-2">
                <label for="title" class="form-label">Enter Title</label>
                <input type="text" name="title" placeholder="Enter title" class="form-control">
            </div>
            <div class="mb-2">
                <label for="description" class="form-label">Enter Description</label>
                <textarea type="text" name="description" placeholder="Enter description" class="form-control"></textarea>
            </div>
            <div class="mb-2">
                <label for="image" class="form-label">Enter Image</label>
                <input type="text" name="image" placeholder="Add image URL/Link" class="form-control">
            </div>
            <div class="mb-2">
                <label for="price" class="form-label">Enter Price</label>
                <input type="number" name="price" placeholder="min-500" class="form-control">
            </div>
            <div class="mb-2">
                <label for="county" class="form-label">Enter County</label>
                <input type="text" name="county" placeholder="india" class="form-control">
            </div>
            <div class="mb-2">
                <label for="location" class="form-label">Enter Location</label>
                <input type="text" name="location" placeholder="Vadodra,Gujarat" class="form-control">
            </div>
            <button class="btn btn-dark mt-3 mb-5 add-btn">Add</button>
        </form>
    </div>
</div>
