<%- layout("layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <h2>Edit Listing</h2>
        <form action="/listings/<%= listing._id %>?_method=PUT" method="POST">
            <div class="mb-2">
                <label for="title" class="form-label">Enter Title</label>
                <input type="text" class="form-control" id="title" name="title" value="<%= listing.title %>" required>
            </div>
            <div class="mb-2">
                <label for="image" class="form-label">Enter Image</label>
                <input type="text" class="form-control" name="image" value="<%= listing.image.url %>" class="form-control">
            </div>
            <div class="mb-2">
                <label for="description" class="form-label">Enter Description</label>
                <textarea id="description" class="form-control" name="description" required><%= listing.description %></textarea>
            </div>
            <div class="mb-2">
                <label for="price" class="form-label">Enter Price</label>
                <input type="number" class="form-control" id="price" name="price" value="<%= listing.price %>" required>
            </div>
            <div class="mb-2">
                <label for="location" class="form-label">Enter Location</label>
                <input type="text" class="form-control" id="location" name="location" value="<%= listing.location %>" required>
            </div>
            <div class="mb-2">
                <label for="county" class="form-label">Enter County</label>
                <input type="text" class="form-control" id="country" name="country" value="<%= listing.country %>" required>
            </div>
            <button type="submit" class="btn btn-dark mt-3 mb-5 add-btn">Update Listing</button>
        </form>
        <a href="/listings/<%= listing._id %>">Cancel</a>
    </div>
</div>
